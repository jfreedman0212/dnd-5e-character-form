// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Character {
  id    Int    @id @default(autoincrement())
  name  String
  race  String
  class String
  cha   Int
  wis   Int
  int   Int
  str   Int
  dex   Int
  con   Int
}